<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_ffffff_side_radius">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/msgTv"
            android:padding="@dimen/dp_8"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_80"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:background="@drawable/bg_ffffff_to_cbcbcb_bottom_left_radius_selector"
                android:id="@+id/leftTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:textColor="@color/color_666666"
                android:text="取消" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="44dp"
                android:background="@color/color_E5E5E5" />

            <TextView
                android:background="@drawable/bg_ffffff_to_cbcbcb_bottom_right_radius_selector"
                android:id="@+id/rightTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/color_0D71DF"
                android:text="确认" />
        </LinearLayout>


    </LinearLayout>
</layout>