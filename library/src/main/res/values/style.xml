<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    中间弹出框动画-->
    <style name="alpha_center_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


<!--    底部弹窗动画-->
    <style name="bottom_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/up_in</item>
        <item name="android:windowExitAnimation">@anim/down_out</item>
    </style>


    <declare-styleable name="YCHButton">
        <!--        背景 按下颜色-->
        <attr name="pressed_color" format="color"/>
        <!--        背景 正常状态颜色-->
        <attr name="normal_color" format="color"/>
        <!--        背景 不可用状态下的颜色-->
        <attr name="enabled_color" format="color"/>
        <!--        字体 按下颜色-->
        <attr name="pressed_text_color" format="color"/>
        <!--        字体 正常颜色-->
        <attr name="normal_text_color" format="color"/>
        <!--        字体 不可用状态下的颜色-->
        <attr name="enabled_text_color" format="color"/>
        <!--        按钮圆角半径-->
        <attr name="radius_size" format="dimension"/>
        <!--        gravity-->
        <attr name="android:gravity"/>
    </declare-styleable>
</resources>